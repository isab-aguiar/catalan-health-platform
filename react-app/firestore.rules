rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Regra para coleção agendas
    match /agendas/{agendaId} {
      allow read, write: if request.auth != null;
    }

    // Regra para coleção eventos
    match /eventos/{eventoId} {
      allow read, write: if request.auth != null;
    }

    // Regra para coleção users
    match /users/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }

    // Regra para coleção vacinas
    match /vacinas/{vacinaId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regra para coleção campanhas
    match /campanhas/{campanhaId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regra para coleção avisos
    match /avisos/{avisoId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regra para coleção feedbacks
    match /feedbacks/{feedbackId} {
      allow read, write: if request.auth != null;
    }

    // Regra para coleção escalas
    match /escalas/{escalaId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    // Regra padrão - negar acesso a outras coleções
    match /{document=**} {
      allow read, write: if false;
    }
  }
}